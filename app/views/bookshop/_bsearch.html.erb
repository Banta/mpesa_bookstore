<% form_tag :controller => 'bookshop', :action => 'bsearch', :method => 'get' do %>
<strong style="color:blue;margin-left:15em;" >Search Books Here</strong><br/>
  <%= text_field_tag :search, params[:search], :id => 'search_field', :size => 100, :height => 3 %>
  <%= submit_tag "Search", :name => nil %>

  <%= link_to_function "Clear", "$('search_field').clear()" %>
<% end %>